<?xml version="1.0" encoding="utf-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="io.github.javabada.baccarat.game.GameController"
            prefHeight="600.0" prefWidth="800.0" stylesheets="/css/main.css">

  <top>
    <HBox>
      <Label text="Balance: "/>
      <Label fx:id="balanceLabel"/>
    </HBox>
  </top>

  <center>
    <StackPane>
      <VBox styleClass="game-layout-wagers">
        <Button fx:id="tieButton"/>
        <Button fx:id="bankerButton"/>
        <Button fx:id="playerButton"/>
      </VBox>

      <AnchorPane pickOnBounds="false">
        <ImageView fx:id="playerCard1" AnchorPane.bottomAnchor="65" AnchorPane.leftAnchor="25"  fitWidth="150" preserveRatio="true"/>
        <ImageView fx:id="playerCard2" AnchorPane.bottomAnchor="45" AnchorPane.leftAnchor="55"  fitWidth="150" preserveRatio="true"/>
        <ImageView fx:id="playerCard3" AnchorPane.bottomAnchor="25" AnchorPane.leftAnchor="85"  fitWidth="150" preserveRatio="true"/>
        <ImageView fx:id="bankerCard1" AnchorPane.bottomAnchor="65" AnchorPane.rightAnchor="85" fitWidth="150" preserveRatio="true"/>
        <ImageView fx:id="bankerCard2" AnchorPane.bottomAnchor="45" AnchorPane.rightAnchor="55" fitWidth="150" preserveRatio="true"/>
        <ImageView fx:id="bankerCard3" AnchorPane.bottomAnchor="25" AnchorPane.rightAnchor="25" fitWidth="150" preserveRatio="true"/>
      </AnchorPane>
    </StackPane>
  </center>

  <bottom>
    <StackPane>
      <GridPane styleClass="game-layout-chips">
        <fx:define>
          <ToggleGroup fx:id="chipsGroup"/>
        </fx:define>
        <ToggleButton toggleGroup="$chipsGroup" GridPane.rowIndex="0" GridPane.columnIndex="0" text="\$5"    userData="5"/>
        <ToggleButton toggleGroup="$chipsGroup" GridPane.rowIndex="0" GridPane.columnIndex="1" text="\$10"   userData="10"/>
        <ToggleButton toggleGroup="$chipsGroup" GridPane.rowIndex="0" GridPane.columnIndex="2" text="\$25"   userData="25"/>
        <ToggleButton toggleGroup="$chipsGroup" GridPane.rowIndex="1" GridPane.columnIndex="0" text="\$100"  userData="100"/>
        <ToggleButton toggleGroup="$chipsGroup" GridPane.rowIndex="1" GridPane.columnIndex="1" text="\$500"  userData="500"/>
        <ToggleButton toggleGroup="$chipsGroup" GridPane.rowIndex="1" GridPane.columnIndex="2" text="\$1000" userData="1000"/>
      </GridPane>

      <HBox pickOnBounds="false" styleClass="game-layout-message">
        <Label fx:id="messageLabel"/>
      </HBox>

      <HBox pickOnBounds="false" styleClass="game-layout-controls">
        <Button fx:id="actionButton"/>
        <Button text="Clear"/>
      </HBox>

      <HBox pickOnBounds="false" styleClass="game-layout-info">
        <Button text="Scoreboard"/>
        <Button text="About"/>
      </HBox>
    </StackPane>
  </bottom>

</BorderPane>
