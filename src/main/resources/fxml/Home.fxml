<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.github.javabada.baccarat.HomeController"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="/Casino.css">

    <center>
        <VBox id="home-center">
            <Label text="Welcome to Baccarat" id="home-title"/>
            <Button text="Start" id="home-start-btn" fx:id="startButton" onAction="#handleStartButtonAction"/>
        </VBox>
    </center>

    <bottom>
        <VBox id="home-bottom">
            <Label text="Created by Jeffrey Zhang"/>
            <Hyperlink text="Source Code on GitHub" onAction="#handleHyperlinkAction"/>
        </VBox>
    </bottom>

</BorderPane>
